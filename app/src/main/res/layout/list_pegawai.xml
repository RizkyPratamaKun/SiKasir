<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pegawai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corner_black_outer"
    android:elevation="2dp"
    android:layout_margin="5dp"
    android:foregroundGravity="center"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_l_jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="Jabatan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#0288D1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_listnama"
            app:layout_constraintStart_toStartOf="@+id/tv_listnama"
            app:layout_constraintTop_toBottomOf="@+id/tv_listnama" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_detail_pegawai"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_listnama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_people_24" />

        <ImageView
            android:id="@+id/iv_kosong_pegawai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_detail_pegawai"
            app:layout_constraintEnd_toEndOf="@+id/iv_detail_pegawai"
            app:layout_constraintStart_toStartOf="@+id/iv_detail_pegawai"
            app:layout_constraintTop_toTopOf="@+id/iv_detail_pegawai"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/tv_listnama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Nama_Pegawai"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="@+id/iv_detail_pegawai"
            app:layout_constraintStart_toStartOf="@+id/iv_detail_pegawai"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_pegawai" />

        <TextView
            android:id="@+id/tv_nmjabatan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_sv"
            android:elevation="50dp"
            android:gravity="center"
            android:text="OP"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_detail_pegawai"
            app:layout_constraintTop_toTopOf="@+id/iv_detail_pegawai" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>