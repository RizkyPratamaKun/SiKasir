<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/amiko"
        android:lineSpacingExtra="10sp"
        android:text="21 Mei 2022 08:53"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/kd_riwayat"
        app:layout_constraintEnd_toEndOf="@+id/status_transaksi"
        app:layout_constraintStart_toEndOf="@+id/kd_riwayat"
        app:layout_constraintTop_toBottomOf="@+id/status_transaksi" />

    <TextView
        android:id="@+id/status_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Tunai"
        android:textColor="#00E676"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_tanggal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_subtotal" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/kd_riwayat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_subtotal"
        app:srcCompat="@drawable/ic_baseline_assignment_24" />

    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Rp2.500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/kd_riwayat"
        app:layout_constraintStart_toEndOf="@+id/imageView20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kd_riwayat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/amiko"
        android:lineSpacingExtra="8sp"
        android:text="kode_riwayat"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_tanggal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView20"
        app:layout_constraintStart_toStartOf="@+id/tv_subtotal"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtotal" />
</androidx.constraintlayout.widget.ConstraintLayout>